<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parking_linear_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_f0f0f0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_now_address_list"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/lamp_edittext_rounded_white"
            android:gravity="center"
            android:text="@string/input_search_lamp"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ababab" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lt_lamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_cream"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none"></ListView>

    </FrameLayout>
</LinearLayout>