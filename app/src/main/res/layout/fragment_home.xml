<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ecedf1"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="180dip"
        app:canLoop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dip_10"
        android:orientation="vertical">

        <LinearLayout style="@style/HomeLinearLayout">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_lamp"
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="智能照明"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="设备管理"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="成本分析"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout style="@style/HomeLinearLayout">


            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="生产分析"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="安全保障"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重要记录"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout style="@style/HomeLinearLayout">


            <android.support.v7.widget.CardView
                android:id="@+id/cv_setting"
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="系统设置"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_scan"
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/c_4897fa"
                app:cardCornerRadius="@dimen/dip_5"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dip_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="二维码"
                    android:textColor="@color/white" />

            </android.support.v7.widget.CardView>

            <View style="@style/HomeCardView" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
